<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
    http://www.springframework.org/schema/tx
    http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<!-- Service -->
	<bean id="companyService" class="service.CompanyServiceImpl" lazy-init="true">
		<constructor-arg>
			<ref bean="companyDao" />
		</constructor-arg>
		<constructor-arg>
			<ref bean="computerService" />
		</constructor-arg>
	</bean>
	<bean id="computerService" class="service.ComputerServiceImpl" lazy-init="true">
		<constructor-arg>
			<ref bean="computerDao" />
		</constructor-arg>
	</bean>

	<!-- Dao -->
	<bean id="companyDao" class="persistence.CompanyDaoImpl"></bean>
	<bean id="computerDao" class="persistence.ComputerDaoImpl"></bean>

</beans>